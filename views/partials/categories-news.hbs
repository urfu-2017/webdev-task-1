<link href="/news/categories-news.css" rel="stylesheet">
<div class="news">
    <div class="news__title">Категории новостей</div>
    {{#each categories}}
        <a class="news__category" href='/{{en}}?{{../query}}'>
            <div class="news__picture-category">
                <img src="pictures/category/{{en}}.png" alt="{{ru}}">
            </div>
            <div class="news__name-category">{{ru}}</div>
        </a>
    {{/each}}
</div>
