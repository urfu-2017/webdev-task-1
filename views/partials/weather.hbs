<div class="weather">
    <div class="weather__name-city">{{city}}</div>
    <img src="{{weather.0.weatherStateImage}}" alt="{{weather.0.weatherStateName}}" width="36px" height="36px" class="weather__image">
    <div class="today-temp">
    <img src="/images/temp.png" class="today-temp__label" alt="temp">
    <span>{{weather.0.temp}}&deg;C</span>
    </div>
    <div class="today-wind">
    <img src="/images/wind.png" class="today-temp__label" alt="wind">
    <span>{{weather.0.windSpeed}}м/с</span>
    </div>
    {{>weatherList}}
</div>
