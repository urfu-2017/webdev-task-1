<link href="/weather/weather.css" rel="stylesheet">
{{#eq metaWeather.status 'ok'}}
    <div class="weather weather_correct-request">
        <div class="weather__name-city">{{ locationName }}</div>
        <img class="weather__icon" src="{{ urlToWeatherPicture }}" alt="Иконка погоды">
        <div class="weather__current-temperature">t&nbsp;&nbsp;&nbsp;&nbsp; {{ currentTemperature }}&#8451;</div>
        <div class="weather__current-wind">
            <div class="wind_vertical-align_top">
                <img class="weather__current-wind-picture" src="/pictures/wind.png" alt="Иконка ветра">
            </div>
            <div class="wind_vertical-align_top">&nbsp;{{ currentWind }}<sup>м</sup>&frasl;<sub>с</sub></div>
        </div>
        <table class="weather__days">
            <tr>
                {{#each nextWeather}}
                <th> {{ date }}</th>
                {{/each}}
            </tr>
            <tr>
                {{#each nextWeather}}
                <td>{{ temperature }}&#8451;</td>
                {{/each}}
            </tr>
            <tr>
                {{#each nextWeather}}
                <td>&nbsp;&nbsp;{{ wind }}<sup>м</sup>&frasl;<sub>с</sub></td>
                {{/each}}
            </tr>
        </table>
    </div>
{{/eq}}
{{#eq metaWeather.status 'error'}}
    <div class="weather">
        <div class="weather__log-message">Произошла ошибка при запросе к сервису погоды</div>
    </div>
{{/eq}}
{{#eq metaWeather.status 'incorrect'}}
    <div class="weather">
        <div class="weather__log-message">Некорректные query параметры при запросе к сервису погоды</div>
    </div>
{{/eq}}
