<div class="news-categories">
    {{#if categories.length}}
    <h2>Категории новостей</h2>
    {{/if}}
    {{#each categories}}
    <div class='news-category'>
        <img src='/icons/{{ titleEn }}.svg' class='news-category__icon'>
        <a class='news-category__link link_black' href='/news?category={{ titleEn }}'>{{ titleRu }}</a>
    </div>
    {{/each}}
</div>