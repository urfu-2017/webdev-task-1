<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>MyNews</title>
    <link rel="stylesheet" type="text/css" href="/index.css">
</head>

<body>
    <header class="header"><h1>MyNews</h1></header>
    <a href={{homelink}}>На главную</a>
    <div class="weather-widget">
        <h2 class="weather-widget__location-name">{{weather.locationName}}</h2>
        <img class="weather-widget__ico" src={{weather.urlForIco}} alt={{weather.currentWeatherInfo.weather_state_abbr}}>

        <div class="weather-widget__current-day">
            <div class="category">
                <img src="/icons/thermometer.svg" class="category__ico">
                <p class="category__name">{{weather.currentWeatherInfo.the_temp}} &#8451;</p>
            </div>

            <div class="category">
                <img src="/icons/wind.svg" class="category__ico">
                <p class="category__name">{{weather.currentWeatherInfo.wind_speed}} м/c</p>
            </div>
        </div>

        <div class="weather-widget__next-days">
            {{#each weather.nextDaysWeather}}
                <div class="weather-tile">
                    <p class="weather-tile__date">{{this.applicable_date}}</p>
                    <p class="weather-tile__temp">{{this.the_temp}} &#8451;</p>
                    <p class="weather-tile__wind-speed">{{this.wind_speed}}  м/c</p>
                </div>
            {{/each}}
        </div>
    </div>

    {{#each articles}}
        <article class="article">
            <a href={{url}} class="article__title">{{this.title}}</a>
            <img class="article__image" src={{this.urlToImage}}>
            <div class="article__date">{{this.publicationDate}}</div>
            <div class="article__description">{{this.description}}</div>
            <footer class="article__source">{{this.sourceName}}</footer>
        </article>
    {{/each}}

    <footer class="footer">
        <a href="https://github.com/ArtyMgn">&#169;ArtyMgn</a>
        <span>2018</span>
    </footer>
</body>
</html>