<section class="articles">
    {{#each articles }}
        <article class="article">
            <div class="article-header">
                <h2 class="article__topic">{{title}}</h2>
                {{#if imageUrl }}
                    <img src={{ imageUrl }} class="article__image">
                {{/if }}
            </div>
            {{#if description }}
                <p class="article__text">{{description}}</p>
            {{else }}
                <p class="article__text">Читайте на {{source}}</p>
            {{/if }}
            <div class="article-footer">
                <a href={{url}}>{{source}}</a>
                <time>{{publishedAt}}</time>
            </div>
        </article>
    {{/each }}
</section>
  
