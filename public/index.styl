 @font-face
   font-family RobotoCondensed
   font-style normal
   src url(fonts/RobotoCondensed.ttf)

body
    font-family RobotoCondensed, Arial, sans-serif
    min-width 800px
    margin auto
    font-size 20px
    width 50%
    padding 10px

a
    text-decoration none

article div
    display inline-block
    vertical-align top

section
    height 60px

.footer
    position fixed
    bottom 0
    left 0

.back
    position fixed
    top 0
    left 0

