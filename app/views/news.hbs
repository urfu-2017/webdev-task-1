<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="{{ meta.charset }}">
        <title>{{ title }}</title>
        <meta name="description" content="{{ meta.description }}">
        <link rel="stylesheet" href="{{staticBasePath}}styles.css" media="screen">
        <link rel="icon" href="{{staticBasePath}}favicon.png">
    </head>
    <body>
        <div class="page-wrap">
            {{> head}}
            {{> widget}}
            <div class="articles-container">
                {{#each articles}}
                    {{>article this}}
                {{/each}}
            </div>
        </div>
    </body>
</html>
