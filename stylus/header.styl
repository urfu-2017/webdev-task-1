$widthToHome = 250px;
.header {
    height: 45px;
    line-height: 45px;
    position: relative;
    
    &__to-home {
        font-size: 18px;
        width: $widthToHome;

        &:visited,
        &:link {
            color: #999;
        }
    }

    &__service-name {
        top: 0;
        font-size: 24px;
        position: absolute;
        margin: 0 0 0 $widthToHome;
    }
}